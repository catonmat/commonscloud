<h1>Posts#show</h1>
<%= link_to '<-- back to all posts', posts_path %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <div id="map"
         style="width: 100%; height: 250px;"
         data-marker="<%= @marker.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
      <ul>
        <li>Post type: <%= @post.post_type %></li>
        <li>Title: <%= @post.title %></li>
        <li>Category: <%= @post.category.name %></li>
        <li>Author: <%= @post.author.name %></li>
        <li>Description: <%= @post.description %></li>
        <li>Location: <%= @post.location %></li>
        <li>Priority: <%= @post.priority %></li> -->
      </ul>
    </div>

    <div class="col-sm-12 col-md-6">

      <p>To: <%= @post.author.name %> </p>
      <%= simple_form_for ([ @post, @connection ]) do |f| %>
        <%= f.input :message, placeholder: 'Help is on the way!' %>
        <%= f.button :submit, 'send', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>



